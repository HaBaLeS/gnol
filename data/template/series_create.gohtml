<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Hello Bulma!</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.8.2/css/bulma.min.css">
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
    <script type="text/javascript"  src="https://code.jquery.com/jquery-3.6.0.js"></script>

    <script src="/static/js/cropper.js"></script>
    <link rel="stylesheet" href="/static/css/cropper.css">

</head>
<body>
{{ template "banner"}}
{{ template "navbar" .}}

<section class="section">
    <div class="container">
        <h1>Create new Series</h1>
            <form name="create_series_form" method="POST">
                <div class="field">
                    <label class="label">Name</label>
                    <div class="control">
                        <input class="input" type="text" name="series_name" placeholder="Text input">
                    </div>
                    <div><input type="file" onchange="previewFile()"></div>
                    <div>
                        <img style="display: block; max-width: 100%" id="series_cover" src="https://i.picsum.photos/id/25/200/300.jpg?hmac=ScdLbPfGd_kI3MUHvJUb12Fsg1meDQEaHY_mM613BVM">
                    </div>
                    <div><button  onclick="exportImage()">Export</button> </div>
                </div>
            </form>
    </div>

</section>
<script>

    const image = document.getElementById('series_cover');
    const cropper = new Cropper(image, {
        aspectRatio: 5/7,
    });

    function previewFile() {
        const preview = document.querySelector('#series_cover');
        const file = document.querySelector('input[type=file]').files[0];
        const reader = new FileReader();

        reader.addEventListener("load", function () {
            // convert image file to base64 string
            //preview.src = reader.result;
            cropper.replace(reader.result,false);
            cropper.reset();

        }, false);

        if (file) {
            reader.readAsDataURL(file);
        }
    }

    function exportImage(){

        var form = document.forms['create_series_form'];
        sn = form.elements.series_name.value;

        const b64Image = cropper.getCroppedCanvas().toDataURL("image/jpeg", 0.8);
        console.log();

        const formData = new FormData();
        formData.append('name', sn);
        formData.append('previewImage', b64Image);

        // Use `jQuery.ajax` method for example
        $.ajax('/series/create', {
            method: 'POST',
            data: formData,
            processData: false,
            contentType: false,
            success() {
                console.log('Upload success');
            },
            error() {
                console.log('Upload error');
            },
        });

    }

    document.addEventListener('DOMContentLoaded', function () {
        document.addEventListener('paste', function (evt) {
            const clipboardItems = evt.clipboardData.items;
            const items = [].slice.call(clipboardItems).filter(function (item) {
                // Filter the image items only
                return item.type.indexOf('image') !== -1;
            });
            if (items.length === 0) {
                return;
            }

            const reader = new FileReader();
            reader.addEventListener("load", function () {
                cropper.replace(reader.result,false);
                cropper.reset();

            }, false);

            const item = items[0];
            reader.readAsDataURL(item.getAsFile());
        });
    });

</script>
</body>
</html>

